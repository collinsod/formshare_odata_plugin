                    <a data-table-name="{{ table.name }}" data-type="update" data-action="revoke" class="grant-action grant-action-{{ table.name }}"><span title="{{ _('Click to revoke update privileges') }}" class="badge badge-primary">{{ _('Update') }}</span></a>
                {% else %}
                    <a data-table-name="{{ table.name }}" data-type="update" data-action="grant" class="grant-action grant-action-{{ table.name }}"><span title="{{ _('Click to grant update privileges') }}" class="badge badge-super-light" >{{ _('Update') }}</span></a>
