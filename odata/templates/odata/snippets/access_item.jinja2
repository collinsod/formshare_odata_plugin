<tr data-expanded="true">
    <td><input type="checkbox" data-table-name="{{ table.name  }}" {% if table.odata_select %}checked{% endif %} class="i-checks" name="input[]"></td>
    <td>{{ table.name }}</td>
    <td>{{ table.desc }}</td>
    {% if table.lookup or table.multi %}
        <td>
            <div id="actions_{{ table.name }}" {% if table.odata_select == False %}style="display: none;"{% endif %}>
